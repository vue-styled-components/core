{
  "name": "@vue-styled-components/root",
  "private": true,
  "packageManager": "pnpm@9.3.0",
  "scripts": {
    "dev": "pnpm build && pnpm -F playground dev",
    "build": "pnpm typecheck && pnpm -F core build",
    "test": "pnpm -F core test",
    "coverage": "pnpm -F core test:coverage",
    "docs:dev": "pnpm build && pnpm -F docs dev",
    "docs:build": "pnpm build && pnpm -F docs build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.4.0",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/vue": "^8.1.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vitest/coverage-v8": "^2.1.8",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.21.0",
    "husky": "^9.0.11",
    "jsdom": "^25.0.1",
    "semantic-release": "^24.1.0",
    "typescript": "^5.7.2",
    "vite": "^6.1.6",
    "vite-plugin-dts": "^4.0.3",
    "vitest": "^2.1.9",
    "vue-tsc": "^2.0.7"
  }
}
